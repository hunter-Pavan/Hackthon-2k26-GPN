<script>
    (function() {
        const analyzeBtn = document.getElementById('analyzeBtn');
        const fetchLinkBtn = document.getElementById('fetchLinkBtn');
        const inputField = document.getElementById('adviceInput');
        const linkInput = document.getElementById('linkInput');
        const riskFill = document.getElementById('riskFill');
        const riskScoreDisplay = document.getElementById('riskScoreDisplay');
        const keywordChips = document.getElementById('keywordChips');
        const warningText = document.getElementById('warningTextContent');
        
        // Link summary elements
        const linkSummarySection = document.getElementById('linkSummarySection');
        const linkSummaryContent = document.getElementById('linkSummaryContent');
        const linkSummaryMeta = document.getElementById('linkSummaryMeta');

        // Chart initialization
        const ctx = document.getElementById('riskChart').getContext('2d');
        let riskChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Hype', 'Urgency', 'Unrealistic', 'Pressure'],
                datasets: [{
                    label: 'Risk Score',
                    data: [8, 7, 9, 6],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(255, 205, 86, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(75, 192, 192, 0.7)'
                    ],
                    borderColor: [
                        'rgb(255, 99, 132)',
                        'rgb(255, 205, 86)',
                        'rgb(54, 162, 235)',
                        'rgb(75, 192, 192)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `Risk level: ${context.raw}/10`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 10,
                        grid: {
                            color: 'rgba(0,0,0,0.05)'
                        },
                        ticks: {
                            stepSize: 2,
                            callback: function(value) {
                                return value + '';
                            }
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Detailed link data with summaries
        const linkDataMap = {
            'twitter.com': {
                content: 'Just found this amazing crypto project! They guarantee 1000% returns in one month! #tothemoon üöÄüöÄüöÄ Don\'t miss out on this life-changing opportunity!',
