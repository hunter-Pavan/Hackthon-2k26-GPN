                author: '@crypto_guru',
                date: '2 hours ago',
                engagement: '2.5K likes, 1.2K retweets',
                riskLevel: 'High'
            },
            'youtube.com': {
                content: 'In this video I\'ll show you how to get rich quick with this secret trading strategy. 100x leverage is the key! FOMO is real guys!',
                summary: 'YouTube video titled "Get Rich Quick with This Secret Strategy" promotes high-leverage trading without explaining risks. Creator has history of pump-and-dump schemes. Video lacks proper risk disclosures required for financial advice.',
                platform: 'YouTube',
                author: 'FinFluencer Daily',
                date: '3 days ago',
                engagement: '45K views, 2.3K comments',
                riskLevel: 'High'
            },
            'reddit.com': {
                content: 'DD: This small-cap gem is about to explode. Insiders are whispering 5x minimum. Act fast before the crowd catches on!',
                summary: 'Reddit post in r/wallstreetbets claims "insider knowledge" about a small-cap stock. Uses anonymous sources and creates urgency. No verifiable evidence provided. Similar posts have preceded pump-and-dump schemes.',
                platform: 'Reddit',
                author: 'u/deep_fomo_value',
                date: '6 hours ago',
                engagement: '850 upvotes, 120 comments',
                riskLevel: 'Suspicious'
            },
            'linkedin.com': {
                content: 'Professional analysis: This sector shows strong fundamentals. Consider dollar-cost averaging over time with proper position sizing.',
                summary: 'LinkedIn post from a CFA charterholder provides balanced investment advice. Includes proper risk warnings and suggests diversified approach. References verified market data and historical performance.',
                platform: 'LinkedIn',
                author: 'Sarah Chen, CFA',
                date: '1 day ago',
                engagement: '1.2K reactions, 45 comments',
                riskLevel: 'Low'
            },
            'default': {
                content: 'The financial advisor claims: "This is a guaranteed moonshot! Put your life savings in now and thank me later when it 100x!"',
                summary: 'Generic financial advice with classic pump signals: guaranteed returns, life savings recommendation, and unrealistic multiples (100x). Lacks any risk disclosure or balanced perspective.',
                platform: 'Unknown source',
                author: 'Unknown',
                date: 'Recent',
                engagement: 'Limited data',
                riskLevel: 'High'
            }
        };

        // Function to extract domain from URL
        function extractDomain(url) {
            try {
                const urlObj = new URL(url);
                return urlObj.hostname.replace('www.', '');
            } catch {
                return 'unknown.com';
            }
        }

        // Get link data based on URL
        function getLinkData(url) {
            const domain = extractDomain(url);
            
            if (domain.includes('twitter') || domain.includes('x.com')) {
                return linkDataMap['twitter.com'];
            } else if (domain.includes('youtube') || domain.includes('youtu.be')) {
                return linkDataMap['youtube.com'];
            } else if (domain.includes('reddit')) {
                return linkDataMap['reddit.com'];
            } else if (domain.includes('linkedin')) {
                return linkDataMap['linkedin.com'];
            } else {
                return linkDataMap['default'];
            }
        }

        // Update summary section with link data
        function updateLinkSummary(url) {
            const linkData = getLinkData(url);
            const domain = extractDomain(url);
            
            // Create summary HTML
            const summaryHTML = `
                <div style="display: flex; align-items: flex-start; gap: 10px;">
                    <i class="fas fa-quote-right" style="color: #2f86d6; font-size: 1.2rem;"></i>
                    <div>
                        <p style="margin-bottom: 8px;"><strong>Content summary:</strong> ${linkData.summary}</p>
                        <p style="background: #e8f0fe; padding: 6px 10px; border-radius: 8px; font-size: 0.9rem;">
                            <i class="fas fa-exclamation-triangle" style="color: ${linkData.riskLevel === 'High' ? '#dc3545' : (linkData.riskLevel === 'Suspicious' ? '#f4b740' : '#28a745')};"></i> 
                            Risk assessment: <strong style="color: ${linkData.riskLevel === 'High' ? '#dc3545' : (linkData.riskLevel === 'Suspicious' ? '#f4b740' : '#28a745')};">${linkData.riskLevel}</strong>
                        </p>
                    </div>
                </div>
            `;
            
            // Create meta HTML
            const metaHTML = `
                <span><i class="fas fa-globe"></i> ${linkData.platform}</span>
                <span><i class="fas fa-user"></i> ${linkData.author}</span>
                <span><i class="fas fa-calendar"></i> ${linkData.date}</span>
                <span><i class="fas fa-chart-line"></i> ${linkData.engagement}</span>
            `;
            
            linkSummaryContent.innerHTML = summaryHTML;
            linkSummaryMeta.innerHTML = metaHTML;
            
            // Show the summary section
            linkSummarySection.style.display = 'block';
            
            return linkData.content;
        }

        // Fetch link button handler
        fetchLinkBtn.addEventListener('click', () => {
            const url = linkInput.value.trim();
            if (!url) {
                alert('Please enter a link/URL');
                return;
            }
            
            // Show loading state
            fetchLinkBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Fetching...';
            fetchLinkBtn.disabled = true;
            
            // Simulate network delay
            setTimeout(() => {
                // Update summary and get content
                const fetchedContent = updateLinkSummary(url);
                inputField.value = fetchedContent;
                
                // Reset button
                fetchLinkBtn.innerHTML = '<i class="fas fa-cloud-download-alt"></i> Fetch';
                fetchLinkBtn.disabled = false;
                
                // Highlight that content was fetched
                inputField.style.borderColor = '#28a745';
                setTimeout(() => {
                    inputField.style.borderColor = '#e2ecf5';
                }, 1000);
                
                // Auto-analyze after fetch
                setTimeout(() => {
                    analyzeBtn.click();
                }, 100);
            }, 1500);
        });

        // Example cards click handler
        const safeCard = document.querySelector('[data-example="safe"]');
        const suspCard = document.querySelector('[data-example="suspicious"]');
        const highCard = document.querySelector('[data-example="highrisk"]');

        function setExample(text) {
            inputField.value = text;
            inputField.focus();
            // Hide link summary when using examples
            linkSummarySection.style.display = 'none';
        }

        safeCard.addEventListener('click', () => {
            setExample("Consider diversifying into low-cost index funds over the long term. Past performance doesn‚Äôt guarantee future results.");
        });
        
        suspCard.addEventListener('click', () => {
            setExample("Analysts whisper this small-cap gem could 5x soon, but you need to act fast before the crowd.");
        });
        
        highCard.addEventListener('click', () => {
            setExample("This guaranteed 100x moonshot is exploding! Put your entire portfolio now, don't think, just buy!!");
        });

        // Function to generate chart data based on risk score and keywords
        function updateChart(score, keywords) {
            // Base values from score
            let hypeScore = Math.min(10, score * 0.9 + 1);
            let urgencyScore = Math.min(10, score * 0.8 + 1.5);
            let unrealisticScore = Math.min(10, score * 1.1);
            let pressureScore = Math.min(10, score * 0.7 + 2);
            
            // Adjust based on keywords
            if (keywords.includes('100x') || keywords.includes('1000%') || keywords.includes('moonshot')) {
                unrealisticScore = Math.min(10, unrealisticScore + 2.5);
                hypeScore = Math.min(10, hypeScore + 2);
            }
            if (keywords.includes('FOMO') || keywords.includes('act fast')) {
                urgencyScore = Math.min(10, urgencyScore + 2.5);
                pressureScore = Math.min(10, pressureScore + 2);
            }
            if (keywords.includes('life savings') || keywords.includes('portfolio')) {
                pressureScore = Math.min(10, pressureScore + 3);
            }
            if (keywords.includes('guaranteed') || keywords.includes('secret')) {
                unrealisticScore = Math.min(10, unrealisticScore + 2);
            }
            
            // Round to 1 decimal
            hypeScore = Math.round(hypeScore * 10) / 10;
            urgencyScore = Math.round(urgencyScore * 10) / 10;
            unrealisticScore = Math.round(unrealisticScore * 10) / 10;
            pressureScore = Math.round(pressureScore * 10) / 10;
            
            // Update chart data
            riskChart.data.datasets[0].data = [hypeScore, urgencyScore, unrealisticScore, pressureScore];
            
            // Update bar colors based on values
            const colors = [
                hypeScore > 7 ? 'rgba(220, 53, 69, 0.8)' : (hypeScore > 4 ? 'rgba(255, 193, 7, 0.8)' : 'rgba(40, 167, 69, 0.8)'),
                urgencyScore > 7 ? 'rgba(220, 53, 69, 0.8)' : (urgencyScore > 4 ? 'rgba(255, 193, 7, 0.8)' : 'rgba(40, 167, 69, 0.8)'),
                unrealisticScore > 7 ? 'rgba(220, 53, 69, 0.8)' : (unrealisticScore > 4 ? 'rgba(255, 193, 7, 0.8)' : 'rgba(40, 167, 69, 0.8)'),
                pressureScore > 7 ? 'rgba(220, 53, 69, 0.8)' : (pressureScore > 4 ? 'rgba(255, 193, 7, 0.8)' : 'rgba(40, 167, 69, 0.8)')
            ];
            
            riskChart.data.datasets[0].backgroundColor = colors;
            riskChart.update();
        }

        // Risk analysis engine
        function analyzeRisk(text) {
            const lower = text.toLowerCase();
            let score = 3.0;
            let keywords = [];

            const riskyDict = [
                { word: '100x', points: 2.2, label: '100x' },
                { word: '1000%', points: 2.5, label: '1000%' },
                { word: 'moonshot', points: 1.8, label: 'moonshot' },
                { word: 'explod', points: 2.0, label: 'explode' },
                { word: 'fomo', points: 1.7, label: 'FOMO' },
                { word: 'life savings', points: 2.8, label: 'life savings' },
                { word: 'guaranteed', points: 1.9, label: 'guaranteed' },
                { word: 'portfolio', points: 0.8, label: 'portfolio' },
                { word: '5x', points: 1.6, label: '5x' },
                { word: 'act fast', points: 1.4, label: 'act fast' },
                { word: 'don\'t think', points: 2.0, label: 'don\'t think' },
                { word: 'leverage', points: 1.7, label: 'leverage' },
                { word: 'gem', points: 1.0, label: 'gem' },
                { word: 'whisper', points: 1.3, label: 'whisper' },
                { word: 'rich quick', points: 2.3, label: 'rich quick' },
                { word: 'secret', points: 1.5, label: 'secret' },
                { word: 'insiders', points: 1.6, label: 'insiders' },
            ];

            let found = [];
            riskyDict.forEach(item => {
                if (lower.includes(item.word.toLowerCase())) {
                    score += item.points;
                    found.push(item.label);
                }
            });

            // Risk reduction for safe terms
            if (lower.includes('diversif') || lower.includes('long term') || lower.includes('past performance')) {
                score -= 2.2;
            }

            score = Math.min(10, Math.max(0, score));
            score = Math.round(score * 10) / 10;

            const uniqueKeywords = [...new Set(found)].slice(0, 8);

            return { score, keywords: uniqueKeywords };
        }

        function updateResults(score, keywords) {
            const percent = (score / 10) * 100;
            riskFill.style.width = percent + '%';

            let color = '#f4b740';
            if (score <= 3.5) color = '#28a745';
            else if (score <= 6.5) color = '#f4b740';
            else color = '#dc3545';
            riskFill.style.background = color;

            riskScoreDisplay.innerText = score.toFixed(1);

            let chipsHtml = '';
            if (keywords.length === 0) {
                chipsHtml = '<span class="chip" style="background:#e9f2f9; color:#346a9e;"><i class="fas fa-check"></i> No strong risky keywords</span>';
            } else {
                keywords.forEach(kw => {
                    chipsHtml += `<span class="chip"><i class="fas fa-bolt"></i> ${kw}</span>`;
                });
            }
            keywordChips.innerHTML = chipsHtml;

            let explanation = '';
            if (score <= 3.5) {
                explanation = '<strong>Low risk:</strong> The advice seems balanced with cautionary terms. No extreme promises detected.';
            } else if (score <= 6.5) {
                explanation = '<strong>Suspicious pattern:</strong> Hints of urgency or unspecified ‚Äúgem‚Äù claims. Lacks diversification warning.';
            } else {
                explanation = '<strong>‚ö†Ô∏è High risk of misleading hype:</strong> Unrealistic returns, pressure tactics (‚ÄúFOMO‚Äù, ‚Äúlife savings‚Äù) ‚Äî typical of pumps and dumps.';
            }
            
            if (keywords.includes('100x') || keywords.includes('1000%') || keywords.includes('moonshot')) {
                explanation = '<strong>High risk ‚Äî explosive promises:</strong> Unrealistic multiples and urgency suggest potential scam rhetoric.';
            }
            warningText.innerHTML = explanation;
            
            // Update the chart
            updateChart(score, keywords);
        }

        analyzeBtn.addEventListener('click', () => {
            const text = inputField.value.trim();
            if (text === '') {
                alert('Paste some financial advice to analyze.');
                return;
            }
            const { score, keywords } = analyzeRisk(text);
            updateResults(score, keywords);
        });

        // Initial analysis
        window.addEventListener('load', () => {
            const defaultText = inputField.value;
            const { score, keywords } = analyzeRisk(defaultText);
            updateResults(score, keywords);
        });
    })();
</script>
</body>
</html>
